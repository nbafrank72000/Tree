<aside class = "aside col-md-3">
			<div class = "aside_item aside_logo"><%= link_to "Tree", '#' %></div>
			<div class = "aside_item aside_headpic"><%= link_to image_tag(current_user.headpic.url, alt: current_user.name, class: "headpic"), user_path(current_user) %></div>

			<div class = "aside_item"><%= link_to current_user.name, user_path(current_user) %></div>
			<div class = "aside_item"><%= link_to "Timeline", '#' %></div>
			<div class = "aside_item"><%= link_to "Post", new_album_url %></div>
			<div class = "aside_item"><%= link_to "Friend", friend_users_path %></div>
			<div class = "aside_item search_bar">
      <%= form_tag search_users_path , :method => :get do %>
        <div class="input-group">
          <input type="text" class="form-control" name="search" value="<%= params[:search] %>" placeholder="Search Friends...">

          <span class="input-group-btn">
            <button type="submit" class="btn btn-default btn-sm btn-search">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
      <% end %>
    </div>

			<% if logged_in? %>
			<div class = "dropup aside_item aside_bottom">
		  	<a href="#" class = "dropdown-toggle" data-toggle = "dropdown">Account</a>
		  		<div class = "dropdown-menu">
		  			<div class = "aside_item aside_drop_item"><%= link_to "Profile", '#' %></div>
		  			<div class = "divider"></div>
		  			<div class = "aside_item aside_drop_item" ><%= link_to "Log out", logout_path %></div>
		  		</div>
		  </div>
		  <% end %>
</aside>